{% extends 'territory.twig' %}
{% block title %}Territory: {{ territory.title }} Details{% endblock title%}

{% block afterfooter %}
	<style>
	main { 
		position: relative;
		top: 0; 
	}
	</style>
{% endblock afterfooter %}

{% block content %}

	<h1>Territory: <strong>{{ territory.title }}</strong></h1>
	{% set buildings = territory.buildings ? territory.buildings : territory.ownBuilding %}
	{% for b in buildings %}
		<article class="building">
		<h2>Address: <a href="{{ path_for('building', {id : b.id } ) }}">{{ b.address }}</a></h2>
			{% set people = b.people %}
			{% set printview, legend, hideaddress = true, true, true %}
			{% include 'partials/people_table.twig' %}
		</article>
	{% else %}
		{# <strong><a href="{{ path_for( 'territory', {'id': territory.id} ) }}">Â« Back to Territory {{ territory.title }}</a></strong> #}
		<p>Sorry, no buildings in territory.</p>
	{% endfor %}

{% endblock content %}

