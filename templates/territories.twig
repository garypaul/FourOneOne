{% extends 'main.twig' %}
{% set active_page = "territories" %}
{% block title 'All Territories' %}
	
{% block content %}

	<h2>Phone Territories</h2>

	<ul class="box-list">
	{% for t in territories %}

		<li class = '{{ t.checked_out ? "checkedout" : "" }}'>
			{% if t.checked_out %}
				<span class='box-item'>{{ t.title }}</span>
			{% else %}
				<a class='box-item' href="{{ path_for('territory_details', {'id': t.id}) }}">
					{{ t.title }} 
				</a> 
			{% endif %}
			<span class="calls">{{ t.total_people }} calls</span>
		</li> 
	{% else %}
		<li><p>No territories were found. Add one!</p></li>
	{% endfor %}
	{# Add 12 empty <li> elements. http://codepen.io/dalgard/pen/Dbnus #}
	{% for i in 0..12 %}
		<li></li>
	{% endfor %}

	</ul>


{% endblock content %}

{% block actions %}
	<a class='button' href="{{ path_for('territory_add') }}">Add Territory</a>
{% endblock actions%}