{% extends 'main.twig' %}
{% set active_page = "territories" %}
{% block title 'All Territories' %}
	
{% block content %}

	<strong>Clark Congregation</strong>
	<h2>Phone Territories</h2>

	<ul class="box-list">
	{% for t in territories %}
		
		{% if t.id == added_id %}
			{% set class = 'added' %}
		{% endif %}
		<li class = '{{ class }}'><a href="{{ path_for('territory_details', {'id': t.id}) }}">{{ t.title }} </a> {{ t.total_people }} calls
		</li> 
	{% else %}
		<li><p>No territories were found. Add one!</p></li>
	{% endfor %}
	</ul>


{% endblock content %}

{% block actions %}
	<a class='button' href="{{ path_for('territory_add') }}">Add Territory</a>
{% endblock actions%}